apiVersion: v1
kind: Service
metadata:
  name: ndslabs-webui
  labels:
    component: ndslabs-webui
spec:
  selector:
    component: ndslabs-webui
  ports:
    - port: 80
      targetPort: 3000
      protocol: TCP
---
apiVersion: v1
kind: ReplicationController
metadata:
  name: ndslabs-webui
spec:
  replicas: 1
  selector:
    component: ndslabs-webui
  template:
    metadata:
      labels:
        component: ndslabs-webui
    spec:
      containers:
      - name: ndslabs-webui
        image: {{ webui_image_name }}
        imagePullPolicy: Always
        ports:
        - containerPort: 3000
          protocol: TCP
        env:
          - name: APISERVER_HOST
            value: "www.{{ ndslabs_domain }}"
          - name: APISERVER_PORT
            value: ""
          - name: APISERVER_PATH
            value: "/api"
          - name: APISERVER_SECURE
            value: "true"
          - name: SUPPORT_EMAIL
            value: "{{ support_email }}"
          - name: ANALYTICS_ACCOUNT
            value: "{{ analytics_account }}"
          - name: GIT_DROPIN_REPO
            value: "{{ webui_git_dropin_repo }}"
          - name: GIT_DROPIN_BRANCH
            value: "{{ webui_git_dropin_branch }}"
        readinessProbe:
          httpGet:
            path: /asset/png/favicon-2-32x32.png
            port: 3000
            scheme: HTTP
          initialDelaySeconds: 10
          timeoutSeconds: 120
      nodeSelector:
          ndslabs-role-loadbal: true
